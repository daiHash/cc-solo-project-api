datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Tag {
  id    String  @default(uuid()) @id
  name  String  @db.VarChar(50) @unique
  boxes Box[] @relation(references: [id])
}

model Review {
  id    String  @default(uuid()) @id
  comment  String  @db.Text()
  author String? @db.VarChar(50)
  createdAt DateTime  @default(now()) @map("created_at")
  box Box? @relation(fields: [boxId], references: [id])
  boxId String?
  rating Float @db.DoublePrecision() @default(0)
}

model Box {
  id    String  @default(uuid()) @id
  name  String  @db.VarChar(50)
  description String @db.Text()
  website String? @db.VarChar(255)
  address String @db.VarChar(255)
  mainImage String? @db.VarChar(255)
  images String[]  @db.VarChar(255)
  tags Tag[] @relation(references: [id])
  lat Float @db.DoublePrecision()
  lng Float @db.DoublePrecision()
  reviews Review[]
  membershipPlans Membeship_Plan[]
  dropInFee Float @db.DoublePrecision()
}

model Membeship_Plan {
  id    String  @default(uuid()) @id
  name  String  @db.VarChar(50)
  description String @db.Text()
  period Int
  price Float @db.DoublePrecision()
  box Box @relation(fields: [boxId], references: [id])
  boxId String
}